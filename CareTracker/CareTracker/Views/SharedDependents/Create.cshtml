@model CareTracker.Models.SharedDependentViewModels.SharedDependentViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>SharedDependent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(model => model.DependentsToShare)
                @Html.DropDownList(
                   "DependentsToShare.DependentId",
                   @Model.DependentsToShare,
                  new
                  {
                      @name = "DependentsToShare.DependentId",
                      @class = "form-control"
                  }
                @Html.ValidationMessageFor(model => model.DependentsToShare, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DoctorList)
                @Html.DropDownList(
                   "ToUser.UserId",
                   @Model.DoctorList,
                  new
                  {
                      @name = "Appointment.DoctorId",
                      @class = "form-control"
                  }
                @Html.ValidationMessageFor(model => model.DoctorList, "", new { @class = "text-danger" })
            </div>
           
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>





