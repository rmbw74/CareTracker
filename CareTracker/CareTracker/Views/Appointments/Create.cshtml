@model CareTracker.Models.AppointmentViewModels.AppointmentCreateViewModel

@{
    ViewData["Title"] = "Create New Appointment";
}
<div class="panel panel-info">
    <div class="panel-heading">
        <h4>Create New Appointment</h4>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DependentList)
                        @Html.DropDownList("Appointment.DependentId", @Model.DependentList, new { @name = "Appointment.DependentId", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DependentList, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DoctorList)
                        @Html.DropDownList("Appointment.DoctorId", @Model.DoctorList, new { @name = "Appointment.DoctorId", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DoctorList, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label asp-for="Appointment.AppointmentDate" class="control-label"></label>
                        <input asp-for="Appointment.AppointmentDate" class="form-control" />
                        <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Appointment.AppointmentTime" class="control-label"></label>
                        <input asp-for="Appointment.AppointmentTime" class="form-control" />
                        <span asp-validation-for="Appointment.AppointmentTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Appointment.AppointmentReason" class="control-label"></label>
                        <input asp-for="Appointment.AppointmentReason" class="form-control" />
                        <span asp-validation-for="Appointment.AppointmentReason" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Appointment.AppointmentAddress" class="control-label"></label>
                        <input asp-for="Appointment.AppointmentAddress" class="form-control" />
                        <span asp-validation-for="Appointment.AppointmentAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Appointment.AppointmentPhoneNumber" class="control-label"></label>
                        <input asp-for="Appointment.AppointmentPhoneNumber" class="form-control" />
                        <span asp-validation-for="Appointment.AppointmentPhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Appointment.AppointmentNotes" class="control-label"></label>
                        <input asp-for="Appointment.AppointmentNotes" class="form-control" />
                        <span asp-validation-for="Appointment.AppointmentNotes" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="panel-footer">

        <div>
            <a class="btn btn-info" asp-action="Index">Back</a>
        </div>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
