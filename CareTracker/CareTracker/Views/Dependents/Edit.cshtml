@model CareTracker.Models.Dependent

@{
    ViewData["Title"] = "Edit Dependent";
}
<div class="panel panel-info">
    <div class="panel-heading">
        <h4>Edit @Html.DisplayFor(Model => Model.FirstName) @Html.DisplayFor(Model => Model.LastName) </h4>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DependentId" />
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Birthday" class="control-label"></label>
                        <input asp-for="Birthday" class="form-control" />
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SocialSecurityNumber" class="control-label"></label>
                        <input asp-for="SocialSecurityNumber" class="form-control" />
                        <span asp-validation-for="SocialSecurityNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DependentNotes" class="control-label"></label>
                        <input asp-for="DependentNotes" class="form-control" />
                        <span asp-validation-for="DependentNotes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


<div>
    <a asp-controller="Summary"asp-action="Show">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
